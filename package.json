{
	"name": "svelte-qrcode",
	"version": "1.0.1",
	"description": "Generate from QR Code with style, logo, and Error Level Rate that serve to avoid errors if the QR Code is damaged.",
  "license": "MIT",
	"author": { 
    "name" : "Jonas Alves",
    "url" : "https://www.linkedin.com/in/jonasbalves/"
  },
	"keywords": [
    "qr",
		"qrcode",
    "svelte",
		"svelte-qrcode",
		"qrious",
		"encode",
		"canvas",
		"image"
  ],
	"scripts": {
		"dev": "vite dev",
		"build": "svelte-kit sync && svelte-package",
		"prepublishOnly": "echo 'Did you mean to publish `./package/`, instead of `./`?' && exit 1",
		"check": "svelte-kit sync && svelte-check --tsconfig ./jsconfig.json",
		"check:watch": "svelte-kit sync && svelte-check --tsconfig ./jsconfig.json --watch",
		"test": "playwright test",
		"lint": "prettier --plugin-search-dir . --check . && eslint .",
		"format": "prettier --plugin-search-dir . --write ."
	},
	"devDependencies": {
		"@playwright/test": "1.25.0",
		"@sveltejs/adapter-auto": "next",
		"@sveltejs/kit": "next",
		"@sveltejs/package": "next",
		"eslint": "^8.16.0",
		"eslint-config-prettier": "^8.3.0",
		"eslint-plugin-svelte3": "^4.0.0",
		"prettier": "^2.6.2",
		"prettier-plugin-svelte": "^2.7.0",
		"svelte": "^3.44.0",
		"svelte-check": "^2.7.1",
		"tslib": "^2.3.1",
		"typescript": "^4.7.4",
		"vite": "^3.1.0"
	},
	"type": "module",
	"dependencies": {
    "qrious": "^4.0.2"
  },
	"repository": {
    "type": "git",
    "url": "https://github.com/JonasJs/svelte-qrcode/"
  }
}
